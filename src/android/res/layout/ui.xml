<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="0dp"
    android:padding="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context=".ViewAlpr">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/previewcam">
        <com.tnc.alpr.DrawView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawcam"
            android:background="@android:color/transparent">
        </com.tnc.alpr.DrawView>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:rowCount="2"
        android:columnCount="4"
        android:layout_alignParentEnd="false"
        android:layout_gravity="left|center_vertical"
        android:id="@+id/rl2"
        android:background="#00000000"
        android:layout_centerVertical="true">

        <Button
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:id="@+id/btake"
            android:background="@drawable/circle"
            android:allowUndo="false"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <com.tnc.alpr.CustomEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewPlate"
            android:textAlignment="center"
            android:textColor="#29394e"
            android:textSize="40dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="#00ffffff"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_alignParentTop="true"
        android:id="@+id/rl1"
        android:background="#00000000"
        android:layout_centerVertical="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:id="@+id/linearLayout">

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/bchat"
                android:background="@drawable/speaker_notes_png"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/bprofile"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/account_box_png"
                android:padding="10dp" />

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/bpay"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/credit_card_png" />

        </LinearLayout>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/breturn"
            android:alpha="1"
            android:textAlignment="center"
            android:visibility="visible"
            android:adjustViewBounds="false"
            android:background="@drawable/angle_left_png"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:padding="50dp"
            android:layout_marginTop="0dp"
            android:layout_margin="0dp" />

    </RelativeLayout>

    <ProgressBar
        style="@style/CustomProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>